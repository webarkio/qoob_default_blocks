<div class="qoob-block qoob-cards qoob-cards-{{id}}" style="background-image: url({{bg_image_url}});">
        <div class="qb-container">
            <div class="qoob-header">
                {{#if header}}
                    <h2 class="qoob-header__title qoob-header__title_color_white">{{header}}</h2>
                {{/if}}
                {{#if description}}
                    <div class="qoob-header__description qoob-header__cards__description qoob-header__description_color_white">
                       {{{description}}}
                    </div>
                {{/if}}
            </div>
        </div>
        <div class="qb-container qb-container_nopadding">
            {{#if cards.length}}
                {{#each_with_sort cards "order"}}
                    <div class="qb-column qb-1-2 qb-mobile-1-1 {{#ifIsNthItem nth=2}} qb-column-margin-none {{/ifIsNthItem}}">
                        <div class="qoob-card">
                            <div class="qoob-card__item">
                                    <div class="qoob-card__front">
                                        <div class="qoob-card__inner">
                                        {{#if icon_front}}
                                            <div class="qoob-card__icon"><span class="{{icon_front}}"></span></div>
                                        {{/if}}
                                        {{#if header_front}}
                                            <div class="qoob-card__header"><h4 class="qoob-card__headertext">{{header_front}}</h4></div>
                                        {{/if}}
                                        {{#if description_front}}
                                            <div class="qoob-card__description">{{{description_front}}}</div>
                                        {{/if}}
                                        </div>
                                    </div>
                                    <div class="qoob-card__back">
                                    <div class="qoob-card__inner">
                                        {{#if icon_back}}
                                            <div class="qoob-card__icon"><span class="{{icon_back}}"></span></div>
                                        {{/if}}
                                        {{#if header_back}}
                                            <div class="qoob-card__header"><h4 class="qoob-card__headertext">{{header_back}}</h4></div>
                                        {{/if}}
                                        {{#if description_back}}
                                            <div class="qoob-card__description">{{{description_back}}}</div>
                                        {{/if}}
                                        </div>
                                    </div>
                            </div>
                        </div>
                    </div>
                {{/each_with_sort}}
            {{/if}}
        </div>
</div>

<script>
    jQuery( document ).ready(function() {
        jQuery('.qoob-cards-{{id}} .qoob-card__item').on('click', function() {
            jQuery(this).toggleClass('qoob-card__item_flipped');
        });

        var borderWidth = parseInt(jQuery('.qoob-cards-{{id}}').find('.qoob-card__item').css("border-width"));

        jQuery('.qoob-cards-{{id}}').find('.qoob-card__inner').each(function(){
            jQuery(this).parents('.qoob-card').height(jQuery(this).outerHeight() + borderWidth * 2);
        });
    });
    jQuery( window ).resize(function() {
        jQuery('.qoob-cards-{{id}}').find('.qoob-card').height('');
        var borderWidth = parseInt(jQuery('.qoob-cards-{{id}}').find('.qoob-card__item').css("border-width"));
        jQuery('.qoob-cards-{{id}}').find('.qoob-card__inner').each(function(){
            jQuery(this).parents('.qoob-card').height(jQuery(this).outerHeight() + borderWidth * 2);
        });
    });
</script> 
