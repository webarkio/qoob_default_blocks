<div class="qoob-block qoob-call-to-action" style="background-image: url({{bgImageUrl}});">
        <div class="qb-container">
            <div class="qoob-header">
            {{#if header}}
                <h2 class="qoob-header__title qoob-header__title_color_white">{{header}}</h2>
            {{/if}}
            {{#if description}}
                <div class="qoob-header__description qoob-header__description_color_white">
                   {{{description}}}
                </div>
            {{/if}}
            </div>
            {{#if actionText}}
                <div class="qoob-button qoob-button-call-to-action">
                    <a class="qoob-button__button qoob-button__button_{{actionHover}}" type="button" href="{{actionUrl}}">{{actionText}}</a>
                </div>
            {{/if}}
        </div>
</div>