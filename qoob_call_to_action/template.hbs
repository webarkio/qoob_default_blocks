<div class="qoob-block qoob-call-to-action" style="background-image: url({{bg_image_url}});">
        <div class="qb-container">
            <div class="qoob-header">
            {{#if header}}
                <h2 class="qoob-header__title qoob-header__title_color_white">{{header}}</h2>
            {{/if}}
            {{#if description}}
                <div class="qoob-header__description qoob-header__description_color_white">
                   {{{description}}}
                </div>
            {{/if}}
            </div>
            {{#if action_text}}
                <div class="qoob-button qoob-button-call-to-action">
                    <a class="qoob-button__button qoob-button__button_{{action_hover}}" type="button" href="{{action_url}}">{{action_text}}</a>
                </div>
            {{/if}}
        </div>
</div>