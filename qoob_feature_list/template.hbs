<div class="qoob-block qoob-feature qoob-feature_list" style="background-color: {{bgColor}}">
        <div class="qb-container">
            <div class="qoob-header qoob-feature__header qoob-feature__header_list">
                {{#if header}}
                    <h2 class="qoob-header__title qoob-header__title_color_white">{{header}}</h2>
                {{/if}}
                {{#if description}}
                    <div class="qoob-header__description qoob-header__description_color_white">
                       {{{description}}}
                    </div>
                {{/if}}
            </div>
        </div>
        <div class="qb-container">
            {{#if featureList.length}}
                {{#each_with_sort featureList "order"}}
                    <div class="qb-column qb-1-3 qb-mobile-1-1 qb-table-1-1 {{#ifIsNthItem nth=3}} qb-column-margin-none {{/ifIsNthItem}}">
                        <div class="qoob-feature qoob-feature-list qoob-feature-list_{{figureVar}} {{#if last}} qoob-feature-list_last {{/if}}">
                            {{#each_with_sort featureListItems "order"}}
                            <div class="qoob-feature__item qoob-feature-list__item {{#if last}} qoob-feature-list__item_last {{/if}} qoob-block__table">
                                <span class="qoob-feature-list__connector qoob-feature-list__connector_{{../figureVar}} full" {{#if last}}style="display:none"{{/if}}></span>
                                <div class="qoob-feature__icon qoob-feature__icon_{{../figureVar}}" style="background-color: {{../../bgColor}}">
                                    <span class="qoob-feature__iconel {{#ifCond ../figureVar '==' 'v1'}} {{iconFront}} {{/ifCond}}" >
                                    {{#ifCond ../figureVar '!=' 'v1'}}
                                            {{math index "+" 1}}
                                    {{/ifCond}}
                                    </span>
                                </div>
                                <div class="qoob-block__table-cell">
                                    {{#if headerItem}}
                                        <div class="qoob-feature__itemheader">
                                            <h4 class="qoob-feature__headertext qoob-feature-list__headertext qoob-feature-list__headertext_{{../figureVar}}" style="color: {{figureBgColor}}">
                                            {{headerItem}}
                                            </h4>
                                        </div>
                                    {{/if}}
                                    {{#if featureListItemText}}
                                        <div class="qoob-feature__description qoob-feature-list__description qoob-feature-list__description_{{../figureVar}} {{#if last}}qoob-feature-list__description_last{{/if}}">{{{featureListItemText}}}</div>
                                    {{/if}}
                                </div>
                               
                            </div>
                            {{/each_with_sort}}
                        </div>
                    </div>
                    {{#ifIsNthItem nth=3}} <div class="clearfix"></div>{{/ifIsNthItem}}
                {{/each_with_sort}}
            {{/if}}
        </div>
</div>