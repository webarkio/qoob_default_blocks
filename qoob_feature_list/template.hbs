<div class="qoob-block qoob-feature qoob-feature_list" style="background-color: {{bg_color}}">
        <div class="qb-container">
            <div class="qoob-header qoob-feature__header qoob-feature__header_list">
                {{#if header}}
                    <h2 class="qoob-header__title qoob-header__title_color_white">{{header}}</h2>
                {{/if}}
                {{#if description}}
                    <div class="qoob-header__description qoob-header__description_color_white">
                       {{{description}}}
                    </div>
                {{/if}}
            </div>
        </div>
        <div class="qb-container">
            {{#if feature_list.length}}
                {{#each_with_sort feature_list "order"}}
                    <div class="qb-column qb-1-3 qb-mobile-1-1 qb-table-1-1 {{#ifIsNthItem nth=3}} qb-column-margin-none {{/ifIsNthItem}}">
                        <div class="qoob-feature qoob-feature-list qoob-feature-list_{{figure_var}} {{#if last}} qoob-feature-list_last {{/if}}">
                            {{#each_with_sort feature_list_items "order"}}
                            <div class="qoob-feature__item qoob-feature-list__item {{#if last}} qoob-feature-list__item_last {{/if}} qoob-block__table">
                                <span class="qoob-feature-list__connector qoob-feature-list__connector_{{../figure_var}} full" {{#if last}}style="display:none"{{/if}}></span>
                                <div class="qoob-feature__icon qoob-feature__icon_{{../figure_var}}" style="background-color: {{../../bg_color}}">
                                    <span class="qoob-feature__iconel {{#ifCond ../figure_var '==' 'v1'}} {{icon_front}} {{/ifCond}}" >
                                    {{#ifCond ../figure_var '!=' 'v1'}}
                                            {{math index "+" 1}}
                                    {{/ifCond}}
                                    </span>
                                </div>
                                <div class="qoob-block__table-cell">
                                    {{#if header_item}}
                                        <div class="qoob-feature__itemheader">
                                            <h4 class="qoob-feature__headertext qoob-feature-list__headertext qoob-feature-list__headertext_{{../figure_var}}" style="color: {{figure_bg_color}}">
                                            {{header_item}}
                                            </h4>
                                        </div>
                                    {{/if}}
                                    {{#if feature_list_item_text}}
                                        <div class="qoob-feature__description qoob-feature-list__description qoob-feature-list__description_{{../figure_var}} {{#if last}}qoob-feature-list__description_last{{/if}}">{{{feature_list_item_text}}}</div>
                                    {{/if}}
                                </div>
                               
                            </div>
                            {{/each_with_sort}}
                        </div>
                    </div>
                    {{#ifIsNthItem nth=3}} <div class="clearfix"></div>{{/ifIsNthItem}}
                {{/each_with_sort}}
            {{/if}}
        </div>
</div>